# Backend example environment variables
# Copy to .env and fill with real values before running in production.

# Port the server listens on (Render sets this automatically)
PORT=5000

# Postgres connection string (required)
# Format: postgresql://<user>:<password>@<host>:<port>/<database>
DATABASE_URL=postgresql://postgres:pass@127.0.0.1:5432/yett

# JWT secret used to sign authentication tokens â€” set a strong random value
JWT_SECRET=replace_with_a_strong_random_secret

# Node environment
NODE_ENV=production
# Example environment variables for backend
# Use a proper MySQL connection URL or set host/user/password/name

# Example full URL for MySQL:
# DATABASE_URL=mysql://user:password@localhost:3306/yett

# Example full URL for Postgres:
# DATABASE_URL=postgresql://postgres:password@localhost:5432/yett

DB_HOST=127.0.0.1
DB_USER=root
DB_PASS=
DB_NAME=yett
DATABASE_URL=

PORT=5000
JWT_SECRET=change_this_in_production

# If using Postgres you can set DATABASE_URL to a postgres URL (see above)
